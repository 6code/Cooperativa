<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.026">


        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:text="Quantidade total: 70kg "
            android:textAllCaps="true"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="60dp"
            tools:layout_editor_absoluteY="162dp" />

        <ListView
            android:id="@+id/id_venda_listcriterio"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/DividerColor"
            android:listSelector="@color/colorAccent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="190dp" />

        <TextView
            android:id="@+id/totaldistribuido"
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="Total distribuÃ­do :"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="248dp" />

        <EditText
            android:id="@+id/editText9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:ems="10"
            android:hint="digite sua senha de ADM"
            android:inputType="textPassword"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="329dp" />


        <Button
            android:id="@+id/id_comfirmar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/botoes_de_menu"
            android:text="Comfirmar "
            android:textColor="@android:color/background_light"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="386dp" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
